{
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.iconTheme": "material-icon-theme",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.settings.applyToAllProfiles": [],
  "editor.fontWeight": "400",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.tabSize": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "smooth",
  "editor.codeLensFontFamily": "Code New Roman",
  "code-runner.runInTerminal": true,
  "workbench.colorTheme": "Ayu Green Dark",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // "window.menuBarVisibility": "hidden",
  "editor.fontFamily": "Liga SFMono Nerd Font",
  "files.autoSaveDelay": 500,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "workbench.settings.editor": "json",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "redhat.telemetry.enabled": true,
  "explorer.confirmDelete": false,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 13.5,
  "terminal.integrated.fontWeight": "350",
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "**/.exe": true
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },
  "editor.codeActionsOnSave": {},
  "git.enableSmartCommit": true,
  "window.customTitleBarVisibility": "auto",
  "window.titleBarStyle": "native",
  "github.copilot.editor.enableAutoCompletions": true,
  "python.defaultInterpreterPath": "/bin/python3",
  "editor.linkedEditing": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1"
}

